<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Weapon</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to 'All Weapons', weapons_path, class: button_class(theme: "transparent") %>
      <%= link_to 'Edit', edit_weapon_path(@weapon), class: button_class(theme:"primary") %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @weapon.name %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @weapon.description %></p>
      </li>
      <li>
        <p class="font-semibold">Price:</p>
        <p><%= @weapon.price %></p>
      </li>
  </ul>
</div>