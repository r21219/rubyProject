<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Order_line</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to 'All Order_lines', order_lines_path, class: button_class(theme: "transparent") %>
      <%= link_to 'Edit', edit_order_line_path(@order_line), class: button_class(theme:"primary") %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Weapon:</p>
        <p><%= @order_line.weapon %></p>
      </li>
      <li>
        <p class="font-semibold">Count:</p>
        <p><%= @order_line.count %></p>
      </li>
      <li>
        <p class="font-semibold">Order:</p>
        <p><%= @order_line.order %></p>
      </li>
  </ul>
</div>